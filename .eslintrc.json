{
    "extends": ["@rocketseat/eslint-config/react"],
    "overrides": [
      {
        "files": ["*.ts", "*.tsx"],
        "extends": ["@rocketseat/eslint-config/react", "plugin:@typescript-eslint/recommended"],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "ecmaVersion": 2018,
          "sourceType": "module",
          "ecmaFeatures": {
            "jsx": true
          }
        },
        "plugins": ["@typescript-eslint"]
      }
    ],
    "plugins": ["simple-import-sort"],
    "rules": {
      "simple-import-sort/imports": "error"
    }
  }